<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true" android:state_pressed="true"><shape>
            <solid android:color="@color/videoview" />

            <stroke android:width="0.5dp" android:color="@color/videoview" />

            <corners android:radius="3dp" />
        </shape></item>
    <item><shape>
            <solid android:color="@color/white" />

            <stroke android:width="0.5dp" android:color="@color/videoview" />

            <corners android:radius="3dp" />
        </shape></item>

</selector>