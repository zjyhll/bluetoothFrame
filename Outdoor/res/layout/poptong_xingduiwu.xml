<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/touming" >

        <LinearLayout
            android:id="@+id/ll_popup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btn_pop_ok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/solid_video"
                android:text="添加1名队员为#8号"
                android:textColor="@color/red"
                android:textSize="@dimen/size16" />

            <Button
                android:id="@+id/btn_pop_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/app_green"
                android:text="等待回应...(4s)"
                android:textColor="@color/red"
                android:textSize="@dimen/size16" />

            <Button
                android:id="@+id/btn_pop_cancle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/solid_video"
                android:text="@string/left_gongju_myguardian_tocontact_pop_cancle"
                android:textColor="@color/title"
                android:textSize="@dimen/size16" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>