<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/select_item_down"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_wode_joinActivity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/wode_youji_join"
                android:textColor="@color/title"
                android:textSize="@dimen/size18" />

            <View
                android:id="@+id/wode_join_view"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/app_green"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/select_item_down"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_wode_createActivity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/wode_youji_create"
                android:textColor="@color/title"
                android:textSize="@dimen/size18" />

            <View
                android:id="@+id/wode_create_view"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/app_green"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/videoview" />

</LinearLayout>