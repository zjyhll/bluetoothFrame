<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hwacreate.outdoor.leftFragment.gongju.ShouDuiDianPingActivity" >

    <include
        android:id="@+id/header"
        layout="@layout/head_otheract" />

    <com.hwacreate.outdoor.view.ReboundScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/allbackground"
            android:orientation="vertical" >

            <include layout="@layout/head_huodongxiangqing" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="评价"
                    android:textColor="@color/content"
                    android:textSize="@dimen/size18" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="最新动态"
                        android:textColor="@color/content"
                        android:textSize="@dimen/size16" />

                    <RatingBar
                        android:id="@+id/wode_ratingbar_1"
                        style="@style/MyRatingBar1"
                        android:layout_width="wrap_content"
                        android:layout_height="19dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:numStars="5"
                        android:rating="1"
                        android:stepSize="1" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="危险系数"
                        android:textColor="@color/content"
                        android:textSize="@dimen/size16" />

                    <RatingBar
                        android:id="@+id/wode_ratingbar_2"
                        style="@style/MyRatingBar1"
                        android:layout_width="wrap_content"
                        android:layout_height="19dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:numStars="5"
                        android:rating="1"
                        android:stepSize="1" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="沿途风景"
                        android:textColor="@color/content"
                        android:textSize="@dimen/size16" />

                    <RatingBar
                        android:id="@+id/wode_ratingbar_3"
                        style="@style/MyRatingBar1"
                        android:layout_width="wrap_content"
                        android:layout_height="19dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:numStars="5"
                        android:rating="1"
                        android:stepSize="1" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="体力挑战"
                        android:textColor="@color/content"
                        android:textSize="@dimen/size16" />

                    <RatingBar
                        android:id="@+id/wode_ratingbar_4"
                        style="@style/MyRatingBar1"
                        android:layout_width="wrap_content"
                        android:layout_height="19dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:numStars="5"
                        android:rating="1"
                        android:stepSize="1" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="后勤资源"
                        android:textColor="@color/content"
                        android:textSize="@dimen/size16" />

                    <RatingBar
                        android:id="@+id/wode_ratingbar_5"
                        style="@style/MyRatingBar1"
                        android:layout_width="wrap_content"
                        android:layout_height="19dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:numStars="5"
                        android:rating="1"
                        android:stepSize="1" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="推荐重游"
                        android:textColor="@color/content"
                        android:textSize="@dimen/size16" />

                    <RatingBar
                        android:id="@+id/wode_ratingbar_6"
                        style="@style/MyRatingBar1"
                        android:layout_width="wrap_content"
                        android:layout_height="19dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:numStars="5"
                        android:rating="1"
                        android:stepSize="1" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="领队素质"
                        android:textColor="@color/content"
                        android:textSize="@dimen/size16" />

                    <RatingBar
                        android:id="@+id/wode_ratingbar_7"
                        style="@style/MyRatingBar1"
                        android:layout_width="wrap_content"
                        android:layout_height="19dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:numStars="5"
                        android:rating="1"
                        android:stepSize="1" />
                </RelativeLayout>

                <EditText
                    android:id="@+id/ctv_dianping"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/solid_video"
                    android:gravity="left|top"
                    android:hint="亲 写点什么吧!"
                    android:maxLength="200"
                    android:padding="4dp"
                    android:scrollbars="vertical"
                    android:singleLine="false"
                    android:textColor="@color/title"
                    android:textSize="@dimen/size14" />

                <TextView
                    android:id="@+id/tv_tijiao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/shape_dianping"
                    android:padding="10dp"
                    android:text="确认提交"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </com.hwacreate.outdoor.view.ReboundScrollView>

</LinearLayout>