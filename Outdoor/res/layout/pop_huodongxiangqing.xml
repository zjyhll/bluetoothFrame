<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/pop_huodong_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/touming" >

        <LinearLayout
            android:id="@+id/pop_huodong_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="20dp"
            android:background="@drawable/solid_video"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="20dp"
            android:visibility="gone" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="bottom"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerInParent="true"
                            android:layout_weight="1"
                            android:drawableLeft="@drawable/biaoqian"
                            android:drawablePadding="5dp"
                            android:gravity="center_vertical"
                            android:text="人数"
                            android:textColor="@color/content"
                            android:textSize="@dimen/size16" />

                        <ImageView
                            android:id="@+id/pop_huodong_close"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_weight="0"
                            android:background="@drawable/select_mall_pop" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/pop_huodong_jian"
                            android:layout_width="40dp"
                            android:layout_height="35dp"
                            android:background="@drawable/duihuan_pop_jian" />

                        <TextView
                            android:id="@+id/pop_huodong_geshu"
                            android:layout_width="55dp"
                            android:layout_height="35dp"
                            android:background="@drawable/solid_video_no"
                            android:gravity="center"
                            android:text="1"
                            android:textColor="@color/content"
                            android:textSize="@dimen/size16" />

                        <ImageView
                            android:id="@+id/pop_huodong_jia"
                            android:layout_width="40dp"
                            android:layout_height="35dp"
                            android:background="@drawable/duihuan_pop_jia" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="10dp"
                    android:drawableLeft="@drawable/biaoqian"
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical"
                    android:text="有无装备"
                    android:textColor="@color/content"
                    android:textSize="@dimen/size16" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <FrameLayout
                        android:id="@+id/pop_huodong_check1_view"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/pop_huodong_check1_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/duihuan_pop_ground_n"
                            android:gravity="center"
                            android:text="有"
                            android:textColor="@color/title"
                            android:textSize="@dimen/size16" />

                        <ImageView
                            android:id="@+id/pop_huodong_check1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|top"
                            android:src="@drawable/duihuan_pop_gou"
                            android:visibility="gone" />
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/pop_huodong_check2_view"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp" >

                        <TextView
                            android:id="@+id/pop_huodong_check2_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/duihuan_pop_ground_n"
                            android:gravity="center"
                            android:text="无"
                            android:textColor="@color/title"
                            android:textSize="@dimen/size16" />

                        <ImageView
                            android:id="@+id/pop_huodong_check2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:src="@drawable/duihuan_pop_gou"
                            android:visibility="gone" />
                    </FrameLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="10dp"
                    android:drawableLeft="@drawable/biaoqian"
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical"
                    android:text="有无户外经验"
                    android:textColor="@color/content"
                    android:textSize="@dimen/size16" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <FrameLayout
                        android:id="@+id/pop_huodong_check3_view"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/pop_huodong_check3_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/duihuan_pop_ground_n"
                            android:gravity="center"
                            android:text="有"
                            android:textColor="@color/title"
                            android:textSize="@dimen/size16" />

                        <ImageView
                            android:id="@+id/pop_huodong_check3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|top"
                            android:src="@drawable/duihuan_pop_gou"
                            android:visibility="gone" />
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/pop_huodong_check4_view"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp" >

                        <TextView
                            android:id="@+id/pop_huodong_check4_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/duihuan_pop_ground_n"
                            android:gravity="center"
                            android:text="无"
                            android:textColor="@color/title"
                            android:textSize="@dimen/size16" />

                        <ImageView
                            android:id="@+id/pop_huodong_check4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:src="@drawable/duihuan_pop_gou"
                            android:visibility="gone" />
                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/pop_huodong_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/select_vip_goumai"
                android:gravity="center"
                android:text="报名"
                android:textColor="@color/white"
                android:textSize="@dimen/size16" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pop_huodong_view_shibai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="20dp"
            android:background="@drawable/solid_video"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="20dp"
            android:visibility="gone" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_weight="0"
                    android:background="@drawable/select_mall_pop"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/pop_huodong_shibai_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="审核失败原因"
                    android:textColor="@color/title"
                    android:textSize="@dimen/size18" />

                <ImageView
                    android:id="@+id/pop_huodong_close_shibai"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_weight="0"
                    android:background="@drawable/select_mall_pop" />
            </LinearLayout>

            <TextView
                android:id="@+id/pop_huodong_shibai_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:maxLines="6"
                android:scrollbars="vertical"
                android:text=""
                android:textColor="@color/content"
                android:textSize="@dimen/size16" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>