<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp" >

    <FrameLayout
        android:id="@+id/youji_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <in.srain.cube.image.CubeImageView
            android:id="@+id/im_youji_beijing"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:scaleType="fitXY" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tv_youji_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_margin="8dp"
                android:padding="8dp"
                android:paddingLeft="0dp"
                android:paddingRight="5dp"
                android:shadowColor="@color/transparent_item"
                android:shadowDx="4"
                android:shadowDy="4"
                android:shadowRadius="1"
                android:text="tv_youji_time"
                android:textColor="@color/white"
                android:textSize="@dimen/size14" />

            <TextView
                android:id="@+id/tv_youji_dianzan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="8dp"
                android:background="@color/transparent3"
                android:drawableLeft="@drawable/user_dianzan_selector"
                android:drawablePadding="2dp"
                android:gravity="center"
                android:padding="2dp"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/size16" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="vertical"
                android:padding="8dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_youji_huodong"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:shadowColor="@color/transparent_item"
                        android:shadowDx="4"
                        android:shadowDy="4"
                        android:shadowRadius="1"
                        android:singleLine="true"
                        android:text="tv_youji_huodong"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size18" />

                    <TextView
                        android:id="@+id/tv_youji_julebu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:shadowColor="@color/transparent_item"
                        android:shadowDx="4"
                        android:shadowDy="4"
                        android:shadowRadius="1"
                        android:singleLine="true"
                        android:text="tv_youji_julebu"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size16" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_youji_geyan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:shadowColor="@color/transparent_item"
                    android:shadowDx="4"
                    android:shadowDy="4"
                    android:shadowRadius="1"
                    android:singleLine="true"
                    android:text="tv_youji_geyan"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size16" />
            </LinearLayout>
        </RelativeLayout>
    </FrameLayout>

</LinearLayout>