<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <com.hwacreate.outdoor.view.MyViewPager
                android:id="@+id/vp_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:overScrollMode="never" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:orientation="horizontal" >
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="4dp" >

            <TextView
                android:id="@+id/tab1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/select_item_down"
                android:drawablePadding="@dimen/minsise"
                android:drawableTop="@drawable/home_dengshan"
                android:gravity="center"
                android:text="@string/homefrg_tap1"
                android:textColor="@color/title"
                android:textSize="@dimen/size15" />

            <TextView
                android:id="@+id/tab2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/select_item_down"
                android:drawablePadding="@dimen/minsise"
                android:drawableTop="@drawable/home_tubu"
                android:gravity="center"
                android:text="@string/homefrg_tap2"
                android:textColor="@color/title"
                android:textSize="@dimen/size15" />

            <TextView
                android:id="@+id/tab3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/select_item_down"
                android:drawablePadding="@dimen/minsise"
                android:drawableTop="@drawable/home_qixing"
                android:gravity="center"
                android:text="@string/homefrg_tap3"
                android:textColor="@color/title"
                android:textSize="@dimen/size15" />

            <TextView
                android:id="@+id/tab4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/select_item_down"
                android:drawablePadding="@dimen/minsise"
                android:drawableTop="@drawable/home_zijia"
                android:gravity="center"
                android:text="@string/homefrg_tap4"
                android:textColor="@color/title"
                android:textSize="@dimen/size15" />

            <TextView
                android:id="@+id/tab5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/select_item_down"
                android:drawablePadding="@dimen/minsise"
                android:drawableTop="@drawable/home_youlun"
                android:gravity="center"
                android:text="@string/homefrg_tap5"
                android:textColor="@color/title"
                android:textSize="@dimen/size15"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="4dp" >

            <TextView
                android:id="@+id/tab6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/select_item_down"
                android:drawablePadding="@dimen/minsise"
                android:drawableTop="@drawable/home_sheying"
                android:gravity="center"
                android:text="@string/homefrg_tap6"
                android:textColor="@color/title"
                android:textSize="@dimen/size15" />

            <TextView
                android:id="@+id/tab7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/select_item_down"
                android:drawablePadding="@dimen/minsise"
                android:drawableTop="@drawable/home_fubai"
                android:gravity="center"
                android:text="@string/homefrg_tap7"
                android:textColor="@color/title"
                android:textSize="@dimen/size15"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tab8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/select_item_down"
                android:drawablePadding="@dimen/minsise"
                android:drawableTop="@drawable/home_xiuxian"
                android:gravity="center"
                android:text="@string/homefrg_tap8"
                android:textColor="@color/title"
                android:textSize="@dimen/size15" />

            <TextView
                android:id="@+id/tab9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/select_item_down"
                android:drawablePadding="@dimen/minsise"
                android:drawableTop="@drawable/home_luying"
                android:gravity="center"
                android:text="@string/homefrg_tap9"
                android:textColor="@color/title"
                android:textSize="@dimen/size15" />

            <TextView
                android:id="@+id/tab10"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/select_item_down"
                android:drawableTop="@drawable/home_qinzi"
                android:gravity="center"
                android:text="@string/homefrg_tap10"
                android:textColor="@color/title"
                android:textSize="@dimen/size15" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/videoview" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/huodong_remen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/select_item_down"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:drawableLeft="@drawable/home_remen"
                    android:gravity="center"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:text="@string/homefrg_remen"
                    android:textSize="@dimen/size14" />

                <View
                    android:id="@+id/huodong_remen_view"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/app_green" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/huodong_julebu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/select_item_down"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:drawableLeft="@drawable/home_julebu"
                    android:gravity="center"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:text="@string/homefrg_julebu"
                    android:textSize="@dimen/size14" />

                <View
                    android:id="@+id/huodong_julebu_view"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/app_green"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/huodong_shoucang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/select_item_down"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:drawableLeft="@drawable/home_shoucang"
                    android:gravity="center"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:text="@string/homefrg_shoucang"
                    android:textSize="@dimen/size14" />

                <View
                    android:id="@+id/huodong_shoucang_view"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/app_green"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>