<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="@drawable/solid_video"
        android:padding="10dp" >

        <TextView
            android:id="@+id/tv_lyname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="SN:LDB20151323221"
            android:textSize="@dimen/size14" />

        <TextView
            android:id="@+id/tv_tocontact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawableRight="@drawable/right_s"
            android:gravity="center"
            android:text="@string/left_gongju_myguardian_tocontact_ok"
            android:textColor="@color/app_green"
            android:textSize="@dimen/size14" />
    </RelativeLayout>

</LinearLayout>