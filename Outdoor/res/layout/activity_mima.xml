<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/allbackground"
    android:orientation="vertical" >

    <include layout="@layout/head_otheract" />

    <com.hwacreate.outdoor.view.ReboundScrollView
        android:id="@+id/fragkan_sv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <com.hwacreate.outdoor.view.CleareditTextView
                android:id="@+id/mima"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/solid_login"
                android:ems="10"
                android:hint="输入登录密码"
                android:inputType="textPassword"
                android:padding="15dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/size14" >
            </com.hwacreate.outdoor.view.CleareditTextView>

            <com.hwacreate.outdoor.view.CleareditTextView
                android:id="@+id/mima_r"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/solid_login"
                android:ems="10"
                android:hint="确认密码"
                android:inputType="textPassword"
                android:padding="15dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/size14" >
            </com.hwacreate.outdoor.view.CleareditTextView>

            <TextView
                android:id="@+id/ok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/select_vip_goumai"
                android:gravity="center"
                android:padding="15dp"
                android:text="确认"
                android:textColor="@color/white"
                android:textSize="@dimen/size16" />
        </LinearLayout>
    </com.hwacreate.outdoor.view.ReboundScrollView>

</LinearLayout>